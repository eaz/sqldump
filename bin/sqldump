#!/Users/mats/.rvm/rubies/ruby-1.9.2-p136/bin/ruby
$LOAD_PATH << File.expand_path('../../lib', __FILE__)
require 'sqldump'

options = Sqldump::Options.new(ARGV)
connector = Sqldump::Connector.new(options)
connector.connect do |dbh|
  dumper = Sqldump::Dumper.new(dbh, options)
  dumper.dump do |sth|
    formatter = Sqldump::Formatter.new(sth, STDOUT, options)
    formatter.output
  end
end
